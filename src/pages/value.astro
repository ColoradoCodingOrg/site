---
import Layout from '../layouts/Layout.astro'
import Hero from '../components/elements/RawHero.astro'

import '../styles/global.css'
---

<Layout title="">
  <div
    class="z-10 bg-contours max-h-screen overflow-y-scroll scrollbar-hide snap-start snap-y snap-mandatory"
  >
    <div class="h-screen snap-start">
      <div class="flex h-1/2 w-full">
        <div class="w-0 md:w-1/2 lg:w-1/2 xl:w-1/2">
          <img
            class="h-full w-full z-0 invisible md:visible lg:visible xl:visible"
            style="object-fit: cover;clip-path: polygon(0 0, 90% 0, 100% 100%, 0 100%);"
            src="/backpacking.png"
          />
        </div>
        <div
          class="h-screen pt-10 w-full md:w-1/2 lg:w-1/2 xl:w-1/2 overflow-hidden"
        >
          <Hero
            title="WEBSITE DEVELOPMENT"
            content="We will help you build out a fast and modern website."
            padding="pt-24"
          />
        </div>
      </div>
      <div class="flex h-1/2 w-full">
        <div
          class="h-screen pt-10 w-full md:w-1/2 lg:w-1/2 xl:w-1/2 overflow-hidden"
        >
          <Hero
            title="TECHNOLOGY CONSULTING"
            content="Technology continuously reshapes our world, we offer recommendations to innovative solutions to complex and diverse problems."
            padding="pt-10"
          />
        </div>
        <div class="w-0 md:w-1/2 lg:w-1/2 xl:w-1/2">
          <img
            class="h-full w-full z-0 invisible md:visible lg:visible xl:visible"
            style="object-fit: cover;clip-path: polygon(0 0, 100% 0, 100% 100%, 10% 100%);"
            src="/town.png"
          />
        </div>
      </div>
    </div>
    <div class="h-screen snap-start">
      <div class="flex h-1/2 w-full">
        <div class="w-0 md:w-1/2 lg:w-1/2 xl:w-1/2">
          <img
            class="h-full w-full z-0 invisible md:visible lg:visible xl:visible"
            style="object-fit: cover;clip-path: polygon(0 0, 90% 0, 100% 100%, 0 100%);"
            src="/ski.png"
          />
        </div>
        <div
          class="h-screen pt-10 w-full md:w-1/2 lg:w-1/2 xl:w-1/2 overflow-hidden"
        >
          <Hero
            title="SECURITY AUDITS"
            content="Find and patch holes in your organizations digital security."
            padding="pt-24"
          />
        </div>
      </div>
      <div class="flex h-1/2 w-full">
        <div
          class="h-screen pt-10 w-full md:w-1/2 lg:w-1/2 xl:w-1/2 overflow-hidden"
        >
          <Hero
            title="DATA SCIENCE"
            content="We will help you understand and make use of your data."
            padding="pt-24"
          />
        </div>
        <div class="w-0 md:w-1/2 lg:w-1/2 xl:w-1/2">
          <img
            class="h-full w-full z-0 invisible md:visible lg:visible xl:visible"
            style="object-fit: cover;clip-path: polygon(0 0, 100% 0, 100% 100%, 10% 100%);"
            src="/snowboardshop.png"
          />
        </div>
      </div>
    </div>
  </div>
</Layout>
