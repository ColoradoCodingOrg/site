---
import DarkButton from '../buttons/DarkButton.svelte'

interface Props {
  title: string
  content?: string
  link?: string
  linkText?: string
  padding?: string
}

const {
  title,
  content = null,
  link = null,
  linkText = null,
  padding,
  contentClasses,
} = Astro.props
---

<script is:inline define:vars={{ content }}></script>

<div class:list={['flex justify-center pt-inherit', padding]}>
  <div class="mx-4 text-sm w-full p-6 items-center bg-white bg-opacity-60 rounded-lg dark:bg-inherit">
    <!-- Title -->
    <div class="max-w-6xl mx-auto mt-5 text-center">
      <h1 class="block text-4xl font-bold ">
        {title}
      </h1>
    </div>
    <!-- End Title -->

    <div class=" max-w-3xl mx-auto mt-5 text-center">
      <p
        id="content"
        class:list={[
          'text-sm lg:text-lg xl:text-lg text-gray-600 dark:text-gray-400',
          contentClasses,
        ]}
      >
        {content}
      </p>
    </div>

    <!-- Buttons -->
    {
      link ? (
        <div class=" w-full gap-3 mt-8 sm:inline-flex sm:justify-center">
          <DarkButton href={link} text={linkText} icon="" />
        </div>
      ) : (
        ''
      )
    }
    <!-- End Buttons -->
  </div>
</div>
