---
import DarkButton from '../buttons/DarkButton.svelte'

interface Props {
  title: string
  content?: string
  link?: string
  linkText?: string
  padding?: string
}

const {
  title,
  content = null,
  link = null,
  linkText = null,
  padding,
  contentClasses,
} = Astro.props
---

<script is:inline define:vars={{ content }}></script>

<div class:list={['flex max-w-[85rem] mx-auto justify-center px-4 pt-inherit', padding]}>
  <div class=" items-center w-42 p-12 rounded-lg bg-opacity-60 bg-white dark:bg-inherit">
    <!-- Title -->
    <div class="max-w-6xl mx-auto mt-5 text-center">
      <h1 class="block text-4xl font-bold md:text-5xl lg:text-6xl">
        {title}
      </h1>
    </div>
    <!-- End Title -->

    <div class="max-w-3xl mx-auto mt-5 text-center">
      <p
        id="content"
        class:list={[
          'text-lg text-gray-600 dark:text-gray-400',
          contentClasses,
        ]}
      >
        {content}
      </p>
    </div>

    <!-- Buttons -->
    {
      link ? (
        <div class="flex grid w-full gap-3 mt-8 sm:inline-flex sm:justify-center">
          <DarkButton href={link} text={linkText} icon="" />
        </div>
      ) : (
        ''
      )
    }
    <!-- End Buttons -->
  </div>
</div>
